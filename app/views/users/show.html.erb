<h1><%= @user.username.capitalize %>'s Profile</h1>

<table id="user_settings">
  <tr>
    <td>Email:</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>Username:</td>
    <td><%= @user.username %></td>
  </tr>
</table>
<% if @is_an_owner %>
  <br>
  <%= link_to 'Edit Account', edit_user_path %>
  <div id="delete_user">
    <%= button_to 'Delete Account', user_path, method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
<% end %>