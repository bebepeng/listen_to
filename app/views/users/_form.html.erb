<%= form_for @user do |f| %>

  <% if @user.errors.present? %>
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
    <br>
  <% end %>

  <table>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :username %></td>
      <td><%= f.text_field :username %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit %></td>
    </tr>
  </table>
<% end %>