<h1>Log In</h1>

<div id="user_form">
  <%= form_for @user, :url => {:action => 'create'} do |f| %>


    <% flash.each do |_name, msg| -%>
      <div class="errors">
        <p><%= msg %></p>
      </div>
    <% end -%>
    <br>


    <table>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit t('log_in') %></td>
      </tr>
    </table>
  <% end %>
</div>